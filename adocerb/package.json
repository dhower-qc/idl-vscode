{
  "name": "adocerb-vscode",
  "displayName": "AsciiDoc ERB Template",
  "description": "Syntax highlighting for AsciiDoc with ERB templating",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dhower-qc/idl-vscode",
    "directory": "adocerb"
  },
  "publisher": "HowerLimited",
  "contributes": {
    "languages": [
      {
        "id": "AsciiDoc (ERB)",
        "extensions": [
          ".adoc.erb"
        ],
        "configuration": "./language-configuration-adocerb.json"
      }
    ],
    "grammars": [
      {
        "language": "AsciiDoc (ERB)",
        "scopeName": "text.asciidoc.erb",
        "path": "./syntaxes/adoc-ruby-injection.json",
        "embeddedLanguages": {
          "source.ruby": "ruby"
        }
      }

    ]
  }
  
}
