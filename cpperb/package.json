{
  "name": "cpperb-vscode",
  "displayName": "C++ ERB template",
  "description": "C++ syntax highlighting with Ruby ERB templating",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dhower-qc/idl-vscode",
    "directory": "cpperb"
  },
  "publisher": "HowerLimited",
  "contributes": {
    "languages": [
      {
        "id": "C++ (ERB)",
        "extensions": [
          ".h.erb",
          ".hxx.erb",
          ".hpp.erb",
          "cxx.erb",
          "cpp.erb"
        ],
        "configuration": "./language-configuration-cpperb.json"
      }
    ],
    "grammars": [
      {
        "language": "C++ (ERB)",
        "scopeName": "source.cpp.erb",
        "path": "./syntaxes/cpp-ruby-injection.json",
        "embeddedLanguages": {
          "source.ruby": "ruby"
        }
      }
    ]
  }
  
}
